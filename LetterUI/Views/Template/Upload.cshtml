@using LetterUI.Models
@model TemplateUploadViewModel 

<div class="text-center">
    <h1 class="display-4">Templates</h1>
    <p>Upload templates</p>

    <form enctype="multipart/form-data" method="post">
        <dl>
            <dt>
                <label asp-for="JsonFile"></label>
            </dt>
            <dd>
                <input asp-for="JsonFile" type="file" />
                <span asp-validation-for="JsonFile"></span>
            </dd>
        </dl>
        <input asp-page-handler="Upload" class="btn" type="submit" value="Upload" />
    </form>

</div>
